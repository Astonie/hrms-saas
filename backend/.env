# =============================================================================
# HRMS-SAAS Environment Configuration
# =============================================================================

# Application Settings
APP_NAME=HRMS-SAAS
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:passme123@localhost:5432/hrms_saas_db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Configuration
OAUTH2_SECRET_KEY=your-oauth2-secret-key-change-in-production
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=false
SMTP_FROM_EMAIL=noreply@hrms-saas.com
SMTP_FROM_NAME=HRMS System

# File Storage Configuration
STORAGE_TYPE=local  # local, s3, minio
STORAGE_BUCKET=hrms-documents
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin123
STORAGE_ENDPOINT_URL=http://localhost:9000

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
RATE_LIMIT_PER_MINUTE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/hrms.log

# Monitoring Configuration
SENTRY_DSN=
PROMETHEUS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Multi-Tenant Configuration
TENANT_HEADER=X-Tenant-ID
TENANT_SUBDOMAIN_ENABLED=true
TENANT_DOMAIN_ENABLED=true

# Feature Flags
FEATURE_BILLING_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true
FEATURE_WEBHOOKS_ENABLED=false
FEATURE_LOCALIZATION_ENABLED=false

# Development Settings
CREATE_DEMO_DATA=true
AUTO_CREATE_TENANTS=true
SKIP_EMAIL_VERIFICATION=true
